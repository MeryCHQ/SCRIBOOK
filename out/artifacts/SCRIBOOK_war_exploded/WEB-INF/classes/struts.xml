<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">


<struts>
<package name="default" extends="struts-default">
    <action name="index">
        <result>index.jsp</result>
    </action>

    <action name="addUser" class="utp.edu.pe.bd_scribookwebprofile.actions.UserAction" method="addUser">
        <result name="success">index.jsp</result>
        <result name="input">error.jsp</result>
    </action>

    <action name="login" class="utp.edu.pe.bd_scribookwebprofile.actions.UserAction" method="login">
        <result name="success">index.jsp</result>
        <result name="input">error.jsp</result>
    </action>

    <action name="logout" class="utp.edu.pe.bd_scribookwebprofile.actions.UserAction" method="logout">
        <result name="success">index.jsp</result>
        <result name="input">error.jsp</result>
    </action>



    <action name="showChallenge" class="utp.edu.pe.bd_scribookwebprofile.actions.ChallengeAction" method="showChallenge">
        <result name="success">showStory.jsp</result>
        <result name="input">error.jsp</result>
    </action>

    <action name="showKeyword" class="utp.edu.pe.bd_scribookwebprofile.actions.KeywordAction" method="showKeyword">
        <result name="success">challenge.jsp</result>
        <result name="input">error.jsp</result>
    </action>

    <action name="showCategory" class="utp.edu.pe.bd_scribookwebprofile.actions.CategoryAction" method="showCategory">
        <result name="success">index.action.jsp</result>
        <result name="input">error.jsp</result>
    </action>

    <action name="showStory" class="utp.edu.pe.bd_scribookwebprofile.actions.StoryAction" method="showStory">
        <result name="success">showStory.jsp</result>
        <result name="input">error.jsp</result>
    </action>

    <action name="searchStory" class="utp.edu.pe.bd_scribookwebprofile.actions.StoryAction" method="searchStory">
        <result name="success">showStory.jsp</result>
        <result name="input">error.jsp</result>
    </action>

    <action name="updateStory" class="utp.edu.pe.bd_scribookwebprofile.actions.StoryAction" method="updateStory">
        <result name="success">showStory.jsp</result>
        <result name="input">error.jsp</result>
    </action>

    <action name="createStory" class="utp.edu.pe.bd_scribookwebprofile.actions.StoryAction" method="createStory">
        <result name="success">createStory.jsp</result>
        <result name="input">error.jsp</result>
    </action>


</package>
</struts>